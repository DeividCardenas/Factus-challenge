# ============= MODO DE APLICACIÓN =============
# Opciones: development, staging, production
APP_MODE=development
DEBUG=True

# ============= SERVIDOR =============
HOST=127.0.0.1
PORT=8000

# ============= BASE DE DATOS =============
# Desarrollo (local PostgreSQL)
DATABASE_URL=postgresql+asyncpg://factus_user:factus_password@localhost:5432/factus_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10
DATABASE_ECHO=False

# ============= SEGURIDAD =============
# IMPORTANTE: Cambiar en producción
SECRET_KEY=dev-secret-key-change-in-production-use-strong-key
ALGORITHM=HS384
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============= API EXTERNA - FACTUS =============
# En desarrollo, usa mock mode
FACTUS_URL=http://localhost:5000
FACTUS_TOKEN=mock-token-local
FACTUS_TIMEOUT=30
FACTUS_MOCK_MODE=True

# ============= REDIS / CACHÉ =============
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=300

# ============= LOGGING =============
LOG_LEVEL=INFO
LOG_FORMAT=text

# ============= RATE LIMITING =============
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60
